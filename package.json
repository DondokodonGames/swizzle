{
  "name": "short-game-platform",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "5-30秒のショートゲームを簡単に作って遊べるプラットフォーム",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "setup": "bash scripts/setup.sh",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "pixi.js": "^7.3.2",
    "@supabase/supabase-js": "^2.38.4",
    "zustand": "^4.4.1",
    "framer-motion": "^10.16.4",
    "react-hook-form": "^7.45.4",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/node": "^20.5.9",
    "@vitejs/plugin-react": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^0.16.4",
    "vitest": "^0.34.6",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.3",
    "jsdom": "^22.1.0",
    "tailwindcss": "^3.3.3",
    "postcss": "^8.4.29",
    "autoprefixer": "^10.4.15",
    "@tailwindcss/forms": "^0.5.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/short-game-platform.git"
  },
  "keywords": [
    "game",
    "platform",
    "react",
    "typescript",
    "pixi.js",
    "supabase"
  ],
  "bugs": {
    "url": "https://github.com/your-username/short-game-platform/issues"
  },
  "homepage": "https://github.com/your-username/short-game-platform#readme"
}
